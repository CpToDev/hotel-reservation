<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee
                             http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">
    <!-- Register Servlet -->
    <servlet>
        <servlet-name>RegisterServlet</servlet-name>
        <servlet-class>com.reservation.servlet.RegisterServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>RegisterServlet</servlet-name>
        <url-pattern>/register</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>RoomListServlet</servlet-name>
        <servlet-class>com.reservation.servlet.RoomListServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>RoomListServlet</servlet-name>
        <url-pattern>/rooms</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>BookRoomServlet</servlet-name>
        <servlet-class>com.reservation.servlet.BookRoomServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>BookRoomServlet</servlet-name>
        <url-pattern>/book-room</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>SearchAvailableRoomsServlet</servlet-name>
        <servlet-class>com.reservation.servlet.SearchAvailableRoomsServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>SearchAvailableRoomsServlet</servlet-name>
        <url-pattern>/search-available-rooms</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>CancelBookingServlet</servlet-name>
        <servlet-class>com.reservation.servlet.CancelBookingServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>CancelBookingServlet</servlet-name>
        <url-pattern>/cancel-booking</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>AvailableRoomsServlet</servlet-name>
        <servlet-class>com.reservation.servlet.AvailableRoomsServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>AvailableRoomsServlet</servlet-name>
        <url-pattern>/available-rooms</url-pattern>
    </servlet-mapping>


    <servlet>
        <servlet-name>ConfirmBookingServlet</servlet-name>
        <servlet-class>com.reservation.servlet.ConfirmBookingServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ConfirmBookingServlet</servlet-name>
        <url-pattern>/confirm-booking</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>BookingListServlet</servlet-name>
        <servlet-class>com.reservation.servlet.BookingListServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>BookingListServlet</servlet-name>
        <url-pattern>/bookings</url-pattern>
    </servlet-mapping>


    <servlet>
        <servlet-name>LoginServlet</servlet-name>
        <servlet-class>com.reservation.servlet.LoginServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>LoginServlet</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>ResetPasswordServlet</servlet-name>
        <servlet-class>com.reservation.servlet.ResetPasswordServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ResetPasswordServlet</servlet-name>
        <url-pattern>/reset-password</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>SetNewPasswordServlet</servlet-name>
        <servlet-class>com.reservation.servlet.SetNewPasswordServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>SetNewPasswordServlet</servlet-name>
        <url-pattern>/set-new-password</url-pattern>
    </servlet-mapping>

    <session-config>
        <session-timeout>30</session-timeout>
    </session-config>
</web-app>
